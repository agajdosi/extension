{
	"name": "Platform Reverse Psychology",
	"version": "0.0.1",
	"description": "An awesome new browser extension",
	"homepage_url": "https://github.com/agajdosi/extension",
	"manifest_version": 2,
	"minimum_chrome_version": "80",
	"applications": {
		"gecko": {
			"id": "awesome-extension@notlmn.github.io",
			"strict_min_version": "80.0"
		}
	},
	"icons": {
		"128": "icon.png"
	},
	"browser_action": {
    "default_popup": "menu/welcome.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png"
		}
  },
	"options_ui": {
		"chrome_style": true,
		"page": "preferences.html"
	},

	
	"permissions": [
		"https://github.com/fregante/browser-extension-template/*",
		"storage"
	],
	"content_scripts": [
		{
			"matches": [ "https://github.com/fregante/browser-extension-template/*" ],
			"js": [ "content.js" ],
			"run_at": "document_end"
		}
	],
	"background": {
		"persistent": false,
		"scripts": [
			"background.js"
		]
	}
}
